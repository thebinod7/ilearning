<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <div id="resetPassword" class="gap">
        <h2>Reset your password </h2>
        <span id="errorMsg"></span>
        <form id="frmResetPassword" method="Post" action="/users/reset-password">
              <input type="hidden" name='userId' id='userId'>
              <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" placeholder="Enter a strong password" name="password" id="password" required="required">
              </div>
              <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" class="form-control" placeholder="Confirm password" name="confirmPassword" id="confirmPassword" required="required">
              </div>
              <button type="button" class="btn btn-default" id=btnResetPassword class="form-btn">Submit</button><br>
          </form>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function() {
  var url,id;
  url = window.location.href;
  id =  url.substr(url.lastIndexOf('/') + 1);
  $('#btnResetPassword').on('click',function() {
    if($('#password').val() != $('#confirmPassword').val()) {
      $('#errorMsg').html('<p style="color:red"><strong>ERROR! Confirm password did not match!</strong></p>')
      return false;
    }
    $('input[name=userId]').val(id);
    $('#frmResetPassword').submit();
  })
});
</script>
